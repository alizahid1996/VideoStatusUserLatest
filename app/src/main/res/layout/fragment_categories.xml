<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Categories">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:orientation="horizontal">



                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Upload Videos"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto_bold"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorLightGrey"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_loveRomantic"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1" >

                            <RelativeLayout
                                android:id="@+id/loveRomantic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imageloveRomantic"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Love &amp; Romantic"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/imageloveRomantic"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/love_romantic" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_party"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1" >

                            <RelativeLayout
                                android:id="@+id/party"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/ic_party"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Party"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/ic_party"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/party"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_sadStatus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1" >

                            <RelativeLayout
                                android:id="@+id/sadStatus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imagesadStatus"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Sad &amp; Breakup"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/imagesadStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/sad_breakup" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_dance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1" >

                            <RelativeLayout
                                android:id="@+id/dance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/ic_dance"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Dance"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/ic_dance"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/dance"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_comedy"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1" >

                            <RelativeLayout
                                android:id="@+id/comedy"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imagecomedy"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Comedy"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/imagecomedy"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/comedy" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_korean"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1" >

                            <RelativeLayout
                                android:id="@+id/korean"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textview.MaterialTextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/ic_korean"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Korean Videos"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/ic_korean"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/korean"/>
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>




        </LinearLayout>

    </ScrollView>

</LinearLayout>